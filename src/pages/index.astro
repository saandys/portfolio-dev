---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import GitHub from '../icons/GitHub.astro';
import SocialPill from '../icons/SocialPill.astro';
import Mail from '../icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import { ACTION_ERROR_CODES } from 'astro:actions';
import Briefcase from '../icons/Briefcase.astro';
import Code from '../icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout title="Sandra Montero. Computer Engineer specialized in AI."
		description="">
	<main class="px-4">
		<SectionContainer class="py-44 pb-20">
			<img class="rounded-full size-12 mb-4" 
				src="https://content.cuerpomente.com/medio/2022/07/13/flores-simbolismo-espiritualidad_09ff3f15_1200x1200.jpg"
				alt="sandra photo" />
			<h1 class="text-white text-2xl lg:text-5xl font-bold flex flex-row
				gap-x-4 pb-6 lg:pb-10">
				Hey, I'm sandra  
				<a
					href="https://www.linkedin.com/in/sandramonterosanz/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center">
						<div class="flex justify-center items-center">
							<Badge>Available</Badge>
						</div>
				</a>
			</h1>

			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
				<span class="text-purple-600">Computer Engineer</span> <span class="opacity-80">specialized in </span>
				<span class="font-bold">AI</span>.
				<span class="text-red-100/90"> From Alicante, Espa√±a. </span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/sandramonterosanz/">
						<LinkedIn class="size-4 md:size-6" />
						LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/saandys">
					<GitHub class="size-4 md:size-6" />
						GitHub
				</SocialPill>
				<SocialPill href="mailto:sandramonterosanz@gmail.com">
					<Mail class="size-4 md:size-6" />
					sandramonterosanz@gmail.com
				</SocialPill> 
			
			</nav>

		</SectionContainer>
		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<Briefcase class="size-6"/>
				Work Experience</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
				<Code class="size-6"/>
				Projects</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>

